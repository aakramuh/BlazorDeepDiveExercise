@page "/servers"
@rendermode InteractiveServer

<h3>Servers</h3>
<br />
<br />

<ul>
    <div class="container-fluid text-center">
    <div class="row w-70">
    @foreach(var city in Cities)
    {
        <div class ="col">
                    <div class="card">
                        <img src="@($"/images/{city}.png")" class="card-img-top" alt="...">
                        <div class="card-body">
                            <button type="button" class="btn btn-primary">@city</button>
                        </div>
                    </div>
     
        </div>
    }
    </div>
    </div>
</ul>

<ul>
    @foreach (var server in servers)
    {
        <li>
            @server.Name in @server.City is currently <span style="color: @(server.IsOnline?"green": "red")"> @(server.IsOnline ? "Online" : "Offline")</span>
            <text>&nbsp;</text>
            <a href="/servers/@server.ServerId" class="btn btn-link">Edit</a>
        </li>
    }
</ul>

@code {

    private List<Server> servers = ServersRepository.GetServers();

    private List<string> Cities = CitiesRepository.GetCities();

}
